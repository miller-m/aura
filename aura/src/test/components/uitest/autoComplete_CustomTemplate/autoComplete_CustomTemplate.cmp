<aura:component extends="ui:interactive">
	<aura:attribute name="value" type="String"/>
	<aura:attribute name="visible" type="Boolean"/>
	
	<aura:handler name="focus" action="{!c.handleFocus}"/>
	
	<!-- has to be an HTML element that can be focusable so that autocomplete can 
		 function properly, or else using key down/up will not navigate to next
		 option.
	-->
	<div><a aura:id="ctOption">{!v.value}</a></div>
</aura:component>