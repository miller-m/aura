<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>aura-impl</artifactId>
    <parent>
        <groupId>org.auraframework</groupId>
        <artifactId>aura-framework</artifactId>
        <version>0.991-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <dependencies>
        <dependency>
            <groupId>org.auraframework</groupId>
            <artifactId>aura</artifactId>
        </dependency>
        <dependency>
            <groupId>org.auraframework</groupId>
            <artifactId>aura-util</artifactId>
        </dependency>
        <dependency>
            <groupId>org.auraframework</groupId>
            <artifactId>aura-impl-expression</artifactId>
        </dependency>
        <dependency>
            <groupId>org.auraframework</groupId>
            <artifactId>aura-components</artifactId>
        </dependency>
        <dependency>
            <groupId>org.auraframework</groupId>
            <artifactId>aura</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.auraframework</groupId>
            <artifactId>aura-util</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-support</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-remote-driver</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-firefox-driver</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-vfs2</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mozilla</groupId>
            <artifactId>rhino</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.phloc</groupId>
            <artifactId>phloc-css</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-nop</artifactId>
        </dependency>
        <dependency>
            <groupId>com.ibm.icu</groupId>
            <artifactId>icu4j</artifactId>
        </dependency>
        <dependency>
            <groupId>com.salesforce</groupId>
            <artifactId>omakase</artifactId>
        </dependency>              
    </dependencies>
    <properties>
        <aura.home>${basedir}/..</aura.home>
        <xunit.js.engine>rhino</xunit.js.engine>
        <xunit.js.format>xml</xunit.js.format>
        <xunit.js.console>${basedir}/src/test/tools/xUnit/xUnit.js.Console.js</xunit.js.console>
        <xunit.js.report>${project.build.directory}/surefire-reports/TEST-xunit.xml</xunit.js.report>
        <xunit.js.gen-test-files>${project.build.directory}/xunitjs/xunitTests</xunit.js.gen-test-files>
        <xunit.js.testPath />
    </properties>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.js</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-test-components</id>
                        <phase>process-test-resources</phase>
                        <configuration>
                            <outputDirectory>target/test-classes/components_aura_impl</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>index-test-components</id>
                        <phase>generate-test-resources</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                        <configuration>
                            <assembleDirectory>target</assembleDirectory>
                            <generateRepository>false</generateRepository>
                            <extraJvmArguments>-Daura.home=. -Dconfig=./config</extraJvmArguments>
                            <programs>
                                <program>
                                    <mainClass>org.auraframework.http.AuraServlet</mainClass>
                                    <name>webapp</name>
                                </program>
                            </programs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>autotest</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-surefire-plugin</artifactId>
                            <configuration>
                                <includes>
                                    <include>**/*UnitTestSuite.java</include>
                                </includes>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>runSinglexunitTest</id>
            <activation>
                <property>
                    <name>xunitTestPath</name>
                </property>
            </activation>
            <properties>
                <xunit.js.testPath>${xunitTestPath}_doc.js</xunit.js.testPath>
            </properties>
        </profile>
        <profile>
            <id>xunit.js</id>
            <activation>
                <property>
                   <name>!skipUnitTests</name>
                </property>
            </activation>
            <build>
               <plugins>
                   <plugin>
                       <artifactId>maven-antrun-plugin</artifactId>
                       <dependencies>
                           <dependency>
                               <groupId>ant-contrib</groupId>
                               <artifactId>ant-contrib</artifactId>
                               <version>1.0b3</version>
                               <exclusions>
                                   <exclusion>
                                       <groupId>ant</groupId>
                                       <artifactId>ant</artifactId>
                                   </exclusion>
                               </exclusions>
                           </dependency>
                       </dependencies>
                       <executions>
                           <execution>
                               <id>xunit.js</id>
                               <phase>test</phase>
                               <goals>
                                    <goal>run</goal>
                               </goals>
                               <configuration>
                                   <target>
                                       <taskdef resource="net/sf/antcontrib/antcontrib.properties" classpathref="maven.plugin.classpath" />
                                       <echo>Generating Aura framework resources for xUnit.js</echo>
                                       <java classname="org.auraframework.test.javascript.GenerateXUnitJS" classpathref="maven.test.classpath" fork="true" failonerror="true">
                                           <jvmarg value="-Daura.home=${basedir}/.." />
                                       </java>
                                       <echo>Executing tests</echo>
                                       <switch value="${xunit.js.engine}">
                                           <case value="rhino">
                                               <java classname="org.mozilla.javascript.tools.shell.Main" classpathref="maven.test.classpath" fork="true" failonerror="false" resultproperty="xunit.returnvalue" output="${project.build.directory}/xunitjs/rawresults.xml">
                                                   <jvmarg value="-Daura.home=${basedir}/.." />
                                                    <arg value="${xunit.js.console}" />
                                                    <arg value="/output:${xunit.js.format}" />
                                                    <arg value="/strict:false" />
                                                    <arg value="/dependency:${basedir}/src/test/tools/xUnit/dependencies/" />
                                                    <arg value="${xunit.js.gen-test-files}/${xunit.js.testPath}" />
                                               </java>
                                           </case>
                                           <default>
                                               <fail>Unknown XUnit.js engine : ${xunit.js.engine}</fail>
                                           </default>
                                       </switch>
                                       <switch value="${xunit.js.format}">
                                           <case value="xml">
                                               <echo>Generating test report</echo>
                                               <xslt in="${project.build.directory}/xunitjs/rawresults.xml" out="${xunit.js.report}" style="${basedir}/src/test/tools/xUnit/junit.xsl" />
                                               <echo>Test report completed: ${xunit.js.report}</echo>
                                           </case>
                                           <default>
                                               <echo>output in: "${project.build.directory}/xunitjs/rawresults.xml"</echo>
                                           </default>
                                       </switch>
                                       <fail message="There were xUnit.js test failures. Check ${xunit.js.report}">
                                           <condition>
                                               <not><equals arg1="0" arg2="${xunit.returnvalue}" /></not>
                                           </condition>
                                       </fail>
                                   </target>
                               </configuration>
                           </execution>
                       </executions>
                   </plugin>
               </plugins>
            </build>
        </profile>
    </profiles>
</project>
